<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>

  <div id="wrapper">

    {{> navbar}}

    {{> sidenav}}

    <div id="page-wrapper">
      <div class="row">
        <div class="col-lg-12">
          {{#stringEquals @root.mode 'add'}}
            <h1 class="page-header">New Global Variable</h1>
          {{/stringEquals}}
          {{#stringEquals @root.mode 'edit'}}
          <h1 class="page-header">Editing Global Variable</h1>
          {{/stringEquals}}
        </div>
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
          {{#if success_message}}
						<div class="alert alert-success">
							{{success_message}}
						</div>
					{{/if}}
					{{#if warning_message}}
						<div class="alert alert-warning">
							{{warning_message}}
						</div>
					{{/if}}
					{{#if error_message}}
						<div class="alert alert-danger">
							{{error_message}}
						</div>
					{{/if}}
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">
                  <form action="/global-variable/action/{{@root.mode}}/save" role="form" method="post"  >
                    <input name="id" type="hidden" value="{{global.id}}" />
                    <div class="form-group">
                      <label>Name</label>
                      <input name="name" required=true class="form-control" placeholder="Enter text" value="{{global.name}}" onchange="this.value = $(this).val().trim()" />
                    </div>
                    <div class="form-group">
                      <label>Value</label>
                      <textarea name="value" required=true class="form-control" placeholder="Enter text" rows="10" onchange="this.value = $(this).val().trim()"  >{{global.value}}</textarea>
                    </div>
                    <div class="form-group">
                      <label>Description</label>
                      <input name="description" required=true  class="form-control" placeholder="Enter text" value="{{global.description}}" />
                    </div>
                    <div class="form-group">
                     <label for="sel1">Select type:</label>
                     <select name="type"  required=true  class="form-control">
                       {{#select global.type}}
                         <option value="P" >Plain</option>
                         <option value="S" >Secret</option>
                       {{/select}}
                     </select>
                   </div>
                    <button type="submit" class="btn btn-outline btn-primary">Submit</button>
                    <a href="/global-variable" type="button" class="btn btn-outline btn-primary">Cancel</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{> scripts}}

</body>

</html>

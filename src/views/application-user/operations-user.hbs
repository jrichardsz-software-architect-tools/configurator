<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>

  <div id="wrapper">

    {{> navbar}}

    {{> sidenav}}

    <div id="page-wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">{{operation}} User</h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
          {{#if success_message}}
						<div class="alert alert-success">
							{{success_message}}
						</div>
					{{/if}}
					{{#if warning_message}}
						<div class="alert alert-warning">
							{{warning_message}}
						</div>
					{{/if}}
					{{#if error_message}}
						<div class="alert alert-danger">
							{{error_message}}
						</div>
					{{/if}}
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">
                  <form action="/application-user/action/save" role="form" method="post" autocomplete="off" >
                    <input name="id" type="hidden" value="{{user.id}}" />
                    <div class="form-group">
                      <label>User name</label>
                      <input name="username" required=true class="form-control" placeholder="Enter user name" value="{{user.username}}" onchange="this.value = $(this).val().trim()" {{#if user.id}} readonly {{/if}}/>
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input name="password" type="password"  required=true  class="form-control" placeholder="Enter password" value="{{user.password}}" />
                    </div>
                    <div class="form-group">
                     <label for="sel1">Select role:</label>
                     <select name="role"  class="form-control">
                       {{#select user.role}}
                         <option value="reader" >Guest</option>
                         <option value="admin" >Administrator</option>
                       {{/select}}
                     </select>
                   </div>
                    <button type="submit" class="btn btn-outline btn-primary">Submit</button>
                    <a id="cancelCreationButton" href="/application-user" type="button" class="btn btn-outline btn-primary">Cancel</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{> scripts}}

</body>

</html>
